{% extends 'base.html.twig' %}

{% block title %}Ajouter matériel{% endblock %}

{% block body %}
    <section id="content" class="table-layout animated fadeIn">

        <div class="chute chute-center">

            <div class="panel">
                <div class="panel-heading">
                    <div class="panel-title">Ajouter un matériel</div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8 off">
                            <form method="post" action="" id="form-ui">

                                <div class="col-lg-6">
                                    {{ form_row(form.urgence) }}
                                </div>
                                <div class="col-lg-6">
                                    {{ form_row(form.statut) }}
                                </div>
                                <div class="col-lg-6">
                                    {{ form_row(form.impact) }}
                                </div>
                                <div class="col-lg-6">
                                    {{ form_row(form.matricule) }}
                                </div>
                                <div class="col-lg-12">
                                    {{ form_row(form.description) }}
                                </div>
                                {{ form_rest(form) }}
                                <div class="col-lg-12">
                                    <input type="submit" class="btn btn-info" value="Enregistrer">
                                </div>
                                {{ form_end(form) }}
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </section>
{% endblock %}
