{% extends 'base.html.twig' %}

{% block title %}Hello LivreController!{% endblock %}

{% block body %}
    <h1>Liste des materiels</h1>

    <table>
        <th>Id</th>
        <th>Titre</th>
        <th>Auteur</th>
        <th>Nb page</th>
        <th>Action</th>
        <tr>
            <td>{{ livre.id }}</td>
            <td>{{ livre.titre }}</td>
            <td>{{ livre.auteur }}</td>
            <td>{{ livre.nbPage }}</td>
            <td>
                <a href="{{ path('espace_admin_livre_modifier', {'id': livre.id}) }}">Modifier</a> &nbsp;&nbsp;
                <a href="{{ path('espace_admin_livre_supprimer', {'id': livre.id}) }}">Supprimer</a>
